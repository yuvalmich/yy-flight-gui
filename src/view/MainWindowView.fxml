<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import view.MapGrid?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainWindowController">
   <children>
      <HBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <VBox spacing="10.0">
               <children>
                  <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
                     <children>
                        <Button fx:id="connectServerButton" mnemonicParsing="false" onAction="#onConnectServerButtonClicked" text="Connect">
                        </Button>
                        <Button fx:id="loadDataButton" mnemonicParsing="false" onAction="#onLoadDataButtonClicked" text="Load data" />
                        <Button fx:id="calculatePathButton" mnemonicParsing="false" onAction="#onCalculatePathButtonClicked" text="Calculate path" HBox.hgrow="NEVER"/>
                     </children>
                  </HBox>
                  <MapGrid fx:id="GridCanvas" height="600.0" width="600.0" />
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" spacing="10.0" HBox.hgrow="NEVER">
               <children>
                  <RadioButton fx:id="AutoPilotButton" mnemonicParsing="false" text="AutoPilot" VBox.vgrow="NEVER" />
                  <TextArea fx:id="CommandLineTextArea" prefHeight="500.0" prefWidth="400.0" promptText="write your commands" VBox.vgrow="NEVER">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></TextArea>
                  <Button fx:id="ExecuteButton" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#ExecutePressed" text="execute" VBox.vgrow="NEVER" />
                  <TextArea fx:id="PrintTextArea" prefHeight="500.0" prefWidth="400.0" promptText="output section"  editable="false" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
